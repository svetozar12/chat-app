{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "kill": "taskkill /f /im node.exe",
    "dev": "yarn kill && lerna run dev --no-sort --stream",
    "dev:backend": "yarn kill && lerna run dev:backend --no-sort --stream",
    "test": "lerna run test --no-sort --stream",
    "lint": "lerna run lint --no-sort --stream",
    "lint-css": "lerna run lint-css --no-sort --stream",
    "format": "lerna run format --no-sort --stream",
    "dev:kill": "yarn kill && yarn dev",
    "db:up": "docker compose up mongo redis azurite -d"
  },
  "devDependencies": {
    "lerna": "^5.1.8",
    "nx": "14.4.3"
  },
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.17.3",
    "node": ">= 12.5.0"
  },
  "name": "chat-app"
}
